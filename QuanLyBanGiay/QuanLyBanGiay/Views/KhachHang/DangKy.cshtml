@model QuanLyBanGiay.Models.KHACHHANG
<link href="~/Content/bootstrap.css" rel="stylesheet" />
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}


@using (Html.BeginForm("DangKy","KhachHang",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2>THÔNG TIN KHÁCH HÀNG</h2>
        <hr />
        @Html.ValidationSummary(true)

        

        <div class="form-group">
            @Html.LabelFor(model => model.tenkhachhang, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" name="txttendangnhap" placeholder="Tên KH"/>
                @Html.ValidationMessageFor(model => model.tenkhachhang)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.gioitinh, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name="txtgioitinh">
                    <option>Nam</option>
                    <option>Nữ</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.diachi, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" name="txtdiachi" placeholder="Địa chỉ" />
                @Html.ValidationMessageFor(model => model.diachi)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.sodienthoai, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" name="txtsodienthoai" placeholder="SĐT" />
                @Html.ValidationMessageFor(model => model.sodienthoai)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" name="txtemail" placeholder="Email" />
                @Html.ValidationMessageFor(model => model.email)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Đặt hàng" class="btn btn-default" />
            </div>
        </div>
    </div>
}

